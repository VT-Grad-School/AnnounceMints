//= depend_on_asset "directives/nav/nav.html"

'use strict';
angular.module('Announcemints')
  .directive('navigation', ['$rootScope', '$q', '$location', function ($rootScope, $q, $location) {
    return {
      restrict: 'E',
      replace: true,
      templateUrl: '<%= asset_path("directives/nav/nav.html") %>',
      link: function ($scope) {

        console.log('linking nav directive');

        $scope.isActive = function (path) {
          console.log($location.path());
          return $location.path() === path;
        };
      },
    };
  }]);